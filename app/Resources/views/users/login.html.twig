{% extends 'base.html.twig' %}

{% block main %}
    <div class="form-group">
                <h1>Login</h1>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <br><button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-lock"></span> Login</button>
                {{ form_end(form) }}
    </div>

{% endblock %}